<% include ../partials/header %>

<div class="container content">
  <div class="container outermostContainer" id="create-form">
      <div class="row">
    	<div class="col">
    		<h1 style="text-align: center" class="title">CREATE <span class="nonWhite">A</span> NEW <span class="nonWhite">ANIME</span> DISCUSSION</h1>
    		<div style="width: 35%; margin: 25px auto;">
    			<form action="/anime" method="POST">
    				<div class="form-group">
    					<input class="form-control" type="text" name="anime[name]" placeholder="name">
    				</div>
    				<div class="form-group">
    					<input class="form-control" type="text" name="anime[image]" placeholder="image url">
    				</div>
    				<div class="form-group">
    					<input class="form-control" type="text" name="anime[gist]" placeholder="gist" maxlength="70">
    				</div>
    				<div class="form-group">
    					<textarea rows="9" class="form-control" type="text" name="anime[description]" placeholder="description"></textarea>
    				</div>
    				<div class="form-group">
    					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
    				</div>
    			</form>
    			<a href="/anime">Go Back</a>
    		</div>
    	</div>
      </div>
  </div>
</div>

<% include ../partials/footer %>
