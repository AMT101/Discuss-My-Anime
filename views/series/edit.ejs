<% include ../partials/header %>

<div class="container create-form outermostContainer">
    <div class="row">
		<div class="col">
			<h1 style="text-align: center">CREATE <span class="nonWhite">A</span> NEW <span class="nonWhite">ANIME</span> DISCUSSION</h1>
			<div style="width: 35%; margin: 25px auto;">
				<form action="/anime/<%= anime._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="anime[name]" value="<%= anime.name %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="anime[image]" value="<%= anime.image %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="anime[gist]" value="<%= anime.gist %>" maxlength="70">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="anime[description]" value="<%= anime.description %>">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-outline-primary btn-block">Submit!</button>
					</div>
				</form>
				<a href="/anime">Go Back</a>
			</div>
		</div>
    </div>
</div>

<% include ../partials/footer %>
